<% include layout/header.ejs %>
<div class="container">
<div class="content">
	<h1>Все курсы Академии</h1>
	<a href="/courses/add" class="btn btn-primary">Создать новый курс</a>
	<table class="table table-striped">
		<thead>
		    <tr>
                <th>Id</th>
                <th>Курс</th>
                <th></th>
                <th></th>
            </tr>
		</thead>
        <tbody>
            <% courses.forEach(function(data) { %>
            <tr>
                <td><%= data.id %></td>
                <td><%= data.name %></td>
                <td style="width: 50px;"><a href="courses/edit/<%= data.id %>"><span class="glyphicon glyphicon-pencil"></span></a></td>
                <td style="width: 50px;"><a href="courses/delete/<%= data.id %>"><span class="glyphicon glyphicon-remove"></span></a></td>
            </tr>
            <% }); %>
        </tbody>
	</table>
</div>
</div>
<% include layout/header.ejs %>